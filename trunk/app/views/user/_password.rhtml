<div class="user_password">
  <table>
    <%= form_input :password_field, "Senha", "password", :size => 30 %>
    <%= form_input :password_field, "Confirme a senha", "password_confirmation", :size => 30 %>
    <% if submit %>
      <%= form_input :submit_button, 'Alterar senha' %>
    <% end %>
  </table>
</div>                                                                          